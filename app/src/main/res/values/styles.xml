<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="EdittextPrimary" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

    /*
    DIALOG
    */ --------------------------

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>